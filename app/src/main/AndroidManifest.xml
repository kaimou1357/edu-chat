<?xml version="1.0" encoding="utf-8"?>
<manifest package="urlinq.android.com.edu_chat"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/educhat"
		android:theme="@style/AppTheme">
		<activity
			android:name=".controller.login.LoginActivity"
			android:label="@string/app_name"
			android:theme="@style/AppTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="urlinq.android.com.edu_chat.controller.MainActivity"/>
		<activity
			android:name="urlinq.android.com.edu_chat.controller.ChatActivity"
			android:parentActivityName=".controller.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".controller.ChatActivity" />
		</activity>
	</application>

</manifest>
