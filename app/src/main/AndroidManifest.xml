<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.urlinq.edu_chat"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:name = "urlinq.android.com.edu_chat.controller.login.App"
		android:allowBackup="true"
		android:icon="@drawable/educhat"
		android:label="@string/app_name"
		android:supportsRtl="true">
		<activity
			android:name="urlinq.android.com.edu_chat.controller.login.LoginActivity"
			android:label="@string/app_name"
			android:screenOrientation = "portrait"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="urlinq.android.com.edu_chat.controller.Main.MainActivity"
			android:screenOrientation = "portrait"
			android:label = ""
			android:windowSoftInputMode="adjustPan"
			android:theme="@style/AppTheme.NoActionBar" />

	</application>

</manifest>
